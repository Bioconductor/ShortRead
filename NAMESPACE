useDynLib(ShortRead, .registration=TRUE)

importClassesFrom(Biobase, AnnotatedDataFrame, Versioned,
                  ScalarCharacter)

importClassesFrom(Biostrings, BStringSet, DNAStringSet,
                  PairwiseAlignedXStringSet)

importFrom(Biobase, selectSome, phenoData, featureData, sampleNames,
           mkScalar)

importFrom(IRanges, coverage, width, score, start, Views)

importFrom(BSgenome, strand)

importFrom(Biostrings, BStringSet, DNAStringSet,
           alphabetFrequency, alphabet, DNA_ALPHABET,
           quality, pairwiseAlignment, pattern, unaligned)

exportClassPattern("^[^\\.]")

exportMethods(show, length, "[", "[[",
              alphabetFrequency, alphabet, coverage,
              strand, width)

exportPattern("^[^\\.]")
