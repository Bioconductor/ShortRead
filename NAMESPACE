useDynLib(ShortRead, .registration=TRUE)

importClassesFrom(Biobase, AnnotatedDataFrame, Versioned)

importClassesFrom(Biostrings, BStringSet, DNAStringSet)

importFrom(Biobase, selectSome)

importFrom(Biostrings, BStringSet, DNAStringSet, width)

exportClasses(SRError, SRWarn, SRList, SRVector,
              QualityScore, NumericQuality, MatrixQuality,
              FastqQuality, SFastqQuality,
              ShortRead, ShortReadQ,
              AlignedDataFrame, AlignedRead,
              SolexaPath, SolexaSet)

exportMethods(show, length, width, "[", "[[")

exportPattern("^[^\\.]")
